<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_home2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:fitsSystemWindows="true"
        android:background="@drawable/newproductbgimage_new"
        app:headerLayout="@layout/nav_header_home2"
        app:menu="@menu/activity_home2_drawer">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Online shop / Smoke shop in India \nWelcome to Big Bang.\nWe are an online shop which makes shopping for Stoner kit and Pot. \nWorld's Best Weed Delivered Straight to your Doorstep and legal areas."
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="bottom"
            tools:ignore="RtlCompat" />


    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>
